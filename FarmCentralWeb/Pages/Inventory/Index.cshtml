@page
@model FarmCentralWeb.Pages.Inventory.IndexModel

@{
    ViewData["Title"] = "Products";
}
@if (Model.errorMessage.Length > 0)

{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<br>
<h1>&#x1F4DA;</h1>
<h2>Filter By Farmer Name</h2>
<h2></h2>

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">FARMER NAMES</label>
        <div class="col-sm-6">
            <select name="farmer_name" class="form-select" asp-items="Model.model.FarmerNameSelectList">
                <option value="Select A Name">Select A Farmer Name</option>
            </select>
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-outline-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>

<h1>Products</h1>

<p>
    <a asp-page="Create">Add a New Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.DateSupplied)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.FarmerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateSupplied)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FarmerName)                    
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>