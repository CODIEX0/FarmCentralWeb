@page
@model FarmCentralWeb.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Products";
}
@if (Model.errorMessage.Length > 0)

{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<br>

<form method="POST">

<label>Filter By Product Type</label>
    <h2></h2>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">PRODUCT TYPE</label>
        <div class="col-sm-6">
            <select name="product_type" class="form-select" asp-items="Model.product_model.ProductTypeSelectList">
                <option value="Select Type">Select A Product Type</option>
            </select>
        </div>
    </div>

    <br>


    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-outline-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>

<h1>&#x1F5A5;</h1>
<h2>PRODUCT LIST</h2>
<a class='btn btn-primary btn-sm' href='/Modules/Create'>New Product</a>
<table class="table">   
    <thead>
        <tr>
            <th>NAME</th>
            <th>DATE SUPPLIED</th>
            <th>QUANTITY</th>
            <th>TYPE</th>
            <th>FARMER NAME</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.products)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DateSupplied</td>
                <td>@item.Quantity</td>
                <td>@item.Type</td>
                <td>@item.FarmerName</td>
                <td>
                    <a class="btn btn-danger btn-sm" href="/Modules/Delete?id=">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>